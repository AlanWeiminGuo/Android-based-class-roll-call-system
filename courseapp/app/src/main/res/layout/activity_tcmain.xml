<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.youth.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mycoursea"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="我的课程"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="@color/white"></TextView>

        <TextView
            android:id="@+id/tv_addcoursea"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="发布课程"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/white"></TextView>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="个人资料"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/white"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_uppass"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="修改密码"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="@color/white"></TextView>

        <TextView
            android:id="@+id/t_quekecishu"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="学生缺课次数查询"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/white"></TextView>

        <TextView
            android:id="@+id/t_quekelv"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="课程缺课率查询"
            android:textSize="16dp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/white"></TextView>





    </LinearLayout>

    <Button
        android:id="@+id/but_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="#ff0000"
        android:text="退出登录"
        android:textColor="@android:color/white"
        android:textSize="16dp" />
</LinearLayout>